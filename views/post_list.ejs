<html lang="en-gb">

<%- include('_head') -%>
<%- include('_header') -%>


<body>
<h1>Posts</h1>
<p> <%= postList.results[0].likedBy.username %> </p>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <%= post.message %> - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %>
            <br>

           Username: <%= post.postedBy.username %>
            <br>

            <img class="profile-pic" alt = "profile image" src = <%= post.postedBy.profileImageUrl %>>
            <br>

            <img alt = "post image" src = <%= post.imageUrl %>>
            <br>

           <!-- Liked by: < %= post.likedBy[0].username %> -->

           <br>
        </li>
    <% }); %>
</ol>
<%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
<% } %>
<%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>
